<%- include ('partials/_header') -%>

<body>
    <!-- NAVIGATION -->
    <%- include ('partials/_navigation') -%>

    <div class="container p-5">
        <ul class="list-group p-5">
            <% messageList.forEach(msg => { %>
                <li class="list-group-item border-warning">
                    <div data-bs-toggle="modal" data-bs-target="#exampleModal<%- msg._id %>">
                       <div class="d-flex justify-content-between align-items-center">
                          <a href="#" class="nav-link"><%- msg.first_name %> <%- msg.last_name %></a>
                              <button class="btn btn-outline-danger ml-auto"><a href="/messages/<%= msg.id %>?_method=DELETE" class="nav-link">Delete</a></button>
                       </div>
                    </div>
                 </li>
                 

                <!-- Modal -->
                <div class="modal fade" id="exampleModal<%- msg._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Subject</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body" style="overflow-y: auto; height: 400px;">
                                First Name = <%- msg.first_name -%> <hr class="border-light">
                                Last Name = <%- msg.last_name -%> <hr class="border-light">
                                email = <%- msg.email -%> <hr class="border-light">
                                subject = <%- msg.subject -%> <hr class="border-light">
                                message = <%- msg.message -%>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary"><a href="mailto:<%- msg.email -%>">Send Mail</a></button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </ul>
    </div>

    <!-- FOOTER -->
    <%- include ('partials/_footer') -%>
</body>
