<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('<%= photo.image %>')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= photo.title  %></h1>
            <h2 class="subheading"></h2>
            <span class="meta"><%= photo.dateCreated  %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-8 mx-auto">
          <%= photo.description %>
        </div>
        <div class="col-lg-2 col-md-2">
          <a href="/edit-blog/<%= photo.id %>">
            <button class="btn btn-outline-dark">Edit Blog</button>
          </a>
        </div>

        <div class="col-lg-2 col-md-2">
          <a href="/photos/<%= photo.id %>?_method=DELETE">
            <button class="btn btn-outline-dark">Remove Blog</button>
          </a>
        </div>
      </div>
    </div>
  </article>
  <hr>

  <!-- Footer -->
  <%- include('partials/_footer') -%>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
